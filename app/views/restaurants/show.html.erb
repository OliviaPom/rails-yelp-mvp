<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.category.capitalize %></p>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.rating %></p>

<h2><%= @restaurant.name%> Reviews</h2>
  <% @reviews.each do |review| %>
    <ul>
      <li><%= review.rating%></li>
      <li><%= review.content%></li>
    </ul>
  <% end %>


<%= link_to 'Back', restaurants_path, class: "btn btn-primary"%>
<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

